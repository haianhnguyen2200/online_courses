<form class="mt-4" name="container-form" method="POST" action="/courses/handle-form-actions">
    <div>
        <a href="/me/stored/courses">Danh sách khoá học</a>
        <h3 class="mt-4">KHOÁ HỌC ĐÃ XOÁ</h3>

        <div class="mt-4 d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
                <label class="form-check-label" for="checkbox-all">
                    Chọn tất cả
                </label>
            </div>

            <select class="form-control form-control-sm checkbox-select-all" name="action" required>
                <option value="">-- Chọn hành động --</option>
                <option value="restore">Khôi phục</option>
                <option value="force-delete">Xoá vĩnh viễn</option>
            </select>

            <button class="btn btn-primary btn-sm btn-check-submit" disabled>Thực hiện</button>
        </div>
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">#</th>
                <th scope="col">Tên khoá học</th>
                <th scope="col">Video ID</th>
                <th scope="col" colspan="2">Mô tả</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
                    </div>
                </td>
                <td scope="row">{{sum @index 1}}</td>
                <td>{{this.name}}</td>
                <td>{{this.videoID}}</td>
                <td class="td-width">{{this.description}}</td>
                <td>
                    <a href="" class="btn btn-primary btn-restore" data-id="{{this._id}}">Khôi phục</a>
                    <a href="" class="btn btn-primary" data-id="{{this._id}}" data-toggle="modal"
                        data-target="#delete-course-modal">Xoá vĩnh viễn</a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="text-center">
                    Không có khoá học nào đã xoá gần đây.
                    <a href="/me/stored/courses">Xem danh sách hiện có</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>

{{!-- Confirm delete course --}}
<div class="modal" tabindex="-1" role="dialog" id="delete-course-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xoá vĩnh viễn khoá học?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Hành động này không thể khôi phục. Bạn vẫn muốn tiếp tục xoá khoá học này?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete-course" type="button" class="btn btn-danger">Xoá vĩnh viễn</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
            </div>
        </div>
    </div>
</div>

{{!-- Hidden form --}}
<form name="delete-course-form" method="POST"></form>
<form name="restore-course-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        var courseId;
        var containerForm = $('form[name="container-form"]');
        var deleteForm = document.forms['delete-course-form'];
        var restoreForm = document.forms['restore-course-form'];
        var btnDeleteCourse = document.getElementById('btn-delete-course');
        var restoreBtn = $('.btn-restore');
        var checkboxAll = $('#checkbox-all');
        var courseItemCheckbox = $('input[name="courseIds[]"]');
        var checkSubmitBtn = $('.btn-check-submit');

        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });

        btnDeleteCourse.onclick = function () {
            deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
            deleteForm.submit();
        }

        //Restore btn clicked
        restoreBtn.click(function (e) {
            e.preventDefault();

            var courseRestoreId = $(this).data('id');
            restoreForm.action = '/courses/' + courseRestoreId + '/restore/?_method=PATCH';
            restoreForm.submit();
        })

        //Checkbox all changed
        checkboxAll.change(function () {
            var isCheckedAll = $(this).prop('checked');
            courseItemCheckbox.prop('checked', isCheckedAll);
            renderCheckSubmitBtn();
        })

        //Course item checkbox changed
        courseItemCheckbox.change(function () {
            var isCheckedAll = courseItemCheckbox.length === $('input[name="courseIds[]"]:checked').length;
            checkboxAll.prop('checked', isCheckedAll);
            renderCheckSubmitBtn();
        })

        //Re-render checkbox submit btn
        function renderCheckSubmitBtn() {
            var checkedCount = $('input[name="courseIds[]"]:checked').length;
            if (checkedCount > 0) {
                checkSubmitBtn.attr('disabled', false);
            } else {
                checkSubmitBtn.attr('disabled', true);
            }
        }
    })
</script>